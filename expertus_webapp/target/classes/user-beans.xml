<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:context="http://www.springframework.org/schema/context" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation=" http://www.springframework.org/schema/beans  http://www.springframework.org/schema/beans/spring-beans-3.0.xsd http://www.springframework.org/schema/context  http://www.springframework.org/schema/context/spring-context-3.0.xsd">
    <context:component-scan base-package="rco.springmvc" />
    <context:annotation-config />
    <bean id="userService" class="rco.springmvc.service.UserServiceImpl" />
    <bean id="jobService" class="rco.springmvc.service.JobServiceImpl" />
    <bean id="userDAO" class="rco.springmvc.dao.UserDAOImpl" />
    <bean id="jobDAO" class="rco.springmvc.dao.JobDAOImpl" />
    <bean id="jobapplicatonDAO" class="rco.springmvc.dao.JobApplicationDAOImpl" />
    <bean id="datasource" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
        <property name="driverClassName" value="com.mysql.jdbc.Driver" />
        <property name="url" value="jdbc:mysql://localhost:3306/expertus_database" />
        <property name="username" value="root" />
        <property name="password" value=" " />
    </bean>
</beans>